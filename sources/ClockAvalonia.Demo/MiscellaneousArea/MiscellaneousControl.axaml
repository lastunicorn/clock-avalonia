<UserControl
	x:Class="DustInTheWind.ClockAvalonia.Demo.MiscellaneousArea.MiscellaneousControl"
	
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:miscellaneousArea="using:DustInTheWind.ClockAvalonia.Demo.MiscellaneousArea"
    xmlns:local="using:DustInTheWind.ClockAvalonia.Demo"
    xmlns:shapes="using:DustInTheWind.ClockAvalonia.Shapes"

	mc:Ignorable="d"
	d:DesignWidth="800"
	d:DesignHeight="450"
	x:DataType="miscellaneousArea:MiscellaneousViewModel">
	
    <UserControl.Resources>
        <local:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
    </UserControl.Resources>
    
	<Design.DataContext>
		<miscellaneousArea:MiscellaneousViewModel/>
	</Design.DataContext>

	<Grid Margin="0 10 0 0">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock 
            Grid.Row="0" 
            Grid.Column="0"
            Text="Clock Direction:"
            VerticalAlignment="Top"
            Margin="5"
            FontWeight="DemiBold"/>
        
        <StackPanel 
            Grid.Row="0" 
            Grid.Column="1"
            Orientation="Vertical"
            Margin="5">
            
            <RadioButton 
                Content="Clockwise"
                IsChecked="{Binding ClockDirection, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static shapes:RotationDirection.Clockwise}}"
                Margin="0 0 0 10"
                VerticalAlignment="Center"/>
            
            <RadioButton 
                Content="Counterclockwise"
                IsChecked="{Binding ClockDirection, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static shapes:RotationDirection.Counterclockwise}}"
                VerticalAlignment="Center"/>
        </StackPanel>

    </Grid>

</UserControl>
