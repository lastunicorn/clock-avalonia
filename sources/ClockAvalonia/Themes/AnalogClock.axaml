<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:DustInTheWind.ClockAvalonia">

    <Style Selector="controls|AnalogClock">
        <Setter Property="Background" Value="Transparent"/>
        
        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <controls:Dial
                        Name="PART_Dial"
                        Shapes="{TemplateBinding Shapes}"
                        KeepProportions="{TemplateBinding KeepProportions}"/>
                </Panel>
            </ControlTemplate>
        </Setter>
    </Style>

</Styles>
